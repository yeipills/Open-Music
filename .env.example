# === CONFIGURACIÓN REQUERIDA ===

# Token del bot de Discord (obtener de https://discord.com/developers/applications)
DISCORD_TOKEN=tu_token_aqui

# ID de la aplicación de Discord
APPLICATION_ID=tu_application_id_aqui

# ID del servidor para comandos de desarrollo (opcional)
# GUILD_ID=tu_guild_id_aqui

# === CONFIGURACIÓN DE AUDIO ===

# Volumen por defecto (0.0 - 2.0)
DEFAULT_VOLUME=0.5

# Bitrate de Opus en bps (máximo 128000 para Discord normal)
OPUS_BITRATE=128000

# Tamaño del frame de audio (960 = 20ms @ 48kHz)
FRAME_SIZE=960

# Duración máxima de canciones en segundos (2 horas por defecto)
MAX_SONG_DURATION=7200

# === RENDIMIENTO Y LÍMITES ===

# Tamaño del caché de metadatos
CACHE_SIZE=100

# Tamaño del caché de audio pre-procesado
AUDIO_CACHE_SIZE=50

# Tamaño máximo de la cola de reproducción
MAX_QUEUE_SIZE=1000

# Número de threads de trabajo (dejar vacío para usar todos los cores)
WORKER_THREADS=

# Tamaño máximo de playlist a importar
MAX_PLAYLIST_SIZE=100

# Límite de comandos por usuario por minuto
RATE_LIMIT_PER_USER=20


# === CARACTERÍSTICAS ===

# Habilitar ecualizador con presets
ENABLE_EQUALIZER=true

# Habilitar reproducción automática
ENABLE_AUTOPLAY=false

# === RUTAS DEL SISTEMA ===

# Directorio de datos persistentes
DATA_DIR=/app/data

# Directorio de caché temporal
CACHE_DIR=/app/cache

# === LOGGING ===

# Nivel de logs (trace, debug, info, warn, error)
RUST_LOG=info,open_music=debug

# Mostrar backtraces en errores
RUST_BACKTRACE=1